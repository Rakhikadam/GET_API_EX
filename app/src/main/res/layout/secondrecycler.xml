    <TextView
        android:id="@+id/text"
        android:text="abc"
        android:textSize="20dp"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

